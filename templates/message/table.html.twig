<table class="table table-striped mx-auto message-table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Phone</th>
        <th>Message</th>
        <th>Description</th>
        <th>Updated At</th>
    </tr>
    </thead>
    <tbody>
    {% for message in messages %}
        <tr>
            <td>{{ message.id }}</td>
            <td>{{ message.user.name }}</td>
            <td>{{ message.phone }}</td>
            <td>{{ message.text }}</td>
            <td>{{ message.status.description }}</td>
            <td>{{ message.updatedAt |date('d-m-Y H:m') }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
